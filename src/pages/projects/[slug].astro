---
import Layout from "../../layouts/Layout.astro";

import { Image } from "astro:assets";
import arrowLeft from "../../assets/svg/arrow-left-line.svg";

import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const projects = await getCollection("projects");

  return projects.map((page) => ({
    params: { slug: page.slug },
    props: { page },
  }));
}

const { page } = Astro.props;
const { Content } = await page.render();
---

<Layout title={page.data.title}>
  <div class="page">
    <div class="page-graphic"></div>

    <div class="page-background">
      <section class="page-content">
        <a href="/projects" class="icon-link">
          <Image src={arrowLeft} alt="Back Arrow" aria-hidden="true" />
           Back to Projects
        </a>
        <h1 class="page-content-heading">{page.data.title}</h1>

        <Content />
      </section>
    </div>
  </div>
</Layout>

<style lang="scss">
  .page {
    &-graphic {
      width: 100%;
      height: 300px;
      background: rgb(91, 143, 185);
      background: linear-gradient(
        45deg,
        rgba(91, 143, 185, 1) 0%,
        rgba(48, 30, 103, 1) 100%
      );
    }

    &-background {
      padding: 1rem;
      background-color: var(--outer-space-1);

      max-width: 1024px;
      margin: -250px auto 0 auto;
      border-radius: 8px;

      @media (max-width: 1024px) {
        border-radius: 0;
      }
    }

    &-content {
      max-width: 845px;
      margin: 0 auto;
      padding-top: 1rem;

      &-heading {
        padding: 1rem 0;
      }
    }
  }
</style>

